<Window x:Class="HMI_ScrewingMonitor.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Cấu hình hệ thống" Height="600" Width="800"
        WindowStartupLocation="CenterOwner" ResizeMode="CanResize">

    <Window.Resources>
        <Style x:Key="TabItemStyle" TargetType="TabItem">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="15,8"/>
        </Style>

        <Style x:Key="GroupBoxStyle" TargetType="GroupBox">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="10"/>
        </Style>

        <Style x:Key="SettingsButtonStyle" TargetType="Button">
            <Setter Property="Padding" Value="20,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Background" Value="SteelBlue"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TabControl Grid.Row="0">
            <!-- Tab 1: Quản lý Thiết bị -->
            <TabItem Header="📱 Quản lý Thiết bị" Style="{StaticResource TabItemStyle}">
                <Grid Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Device List -->
                    <GroupBox Grid.Column="0" Header="Danh sách Thiết bị" Style="{StaticResource GroupBoxStyle}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <DataGrid Grid.Row="0" Name="DevicesDataGrid" AutoGenerateColumns="False"
                                     CanUserAddRows="False" CanUserDeleteRows="False"
                                     ItemsSource="{Binding Devices}" SelectedItem="{Binding SelectedDevice}">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="ID" Binding="{Binding DeviceId}" Width="40"/>
                                    <DataGridTextColumn Header="Tên Thiết bị" Binding="{Binding DeviceName}" Width="130"/>
                                    <DataGridTextColumn Header="Mô hình" Binding="{Binding DeviceModel}" Width="60"/>
                                    <DataGridTextColumn Header="IP Address" Binding="{Binding IPAddress}" Width="100"/>
                                    <DataGridTextColumn Header="Port" Binding="{Binding Port}" Width="50"/>
                                    <DataGridTextColumn Header="Slave ID" Binding="{Binding SlaveId}" Width="60"/>
                                    <DataGridCheckBoxColumn Header="Kích hoạt" Binding="{Binding Enabled}" Width="70"/>
                                </DataGrid.Columns>
                            </DataGrid>

                            <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10">
                                <Button Content="➕ Thêm" Command="{Binding AddDeviceCommand}"
                                       Style="{StaticResource SettingsButtonStyle}"/>
                                <Button Content="✏️ Sửa" Command="{Binding EditDeviceCommand}"
                                       Style="{StaticResource SettingsButtonStyle}"/>
                                <Button Content="🗑️ Xóa" Command="{Binding DeleteDeviceCommand}"
                                       Style="{StaticResource SettingsButtonStyle}"/>
                            </StackPanel>
                        </Grid>
                    </GroupBox>

                    <!-- Device Details -->
                    <GroupBox Grid.Column="1" Header="Chi tiết Thiết bị" Style="{StaticResource GroupBoxStyle}">
                        <StackPanel DataContext="{Binding SelectedDevice}">
                            <Label Content="ID Thiết bị:"/>
                            <TextBox Text="{Binding DeviceId}" Margin="0,0,0,10"/>

                            <Label Content="Tên Thiết bị:"/>
                            <TextBox Text="{Binding DeviceName}" Margin="0,0,0,10"/>

                            <Label Content="IP Address:"/>
                            <TextBox Text="{Binding IPAddress}" Margin="0,0,0,10"/>

                            <Label Content="Port:"/>
                            <TextBox Text="{Binding Port}" Margin="0,0,0,10"/>

                            <Label Content="Slave ID:"/>
                            <TextBox Text="{Binding SlaveId}" Margin="0,0,0,10"/>

                            <Label Content="Mô hình thiết bị:"/>
                            <TextBox Text="{Binding DeviceModel}" Margin="0,0,0,10"/>

                            <CheckBox Content="Kích hoạt thiết bị" IsChecked="{Binding Enabled}" Margin="0,10"/>

                            <Separator Margin="0,10"/>

                            <Label Content="Lực siết Min (Nm):"/>
                            <TextBox Text="{Binding MinTorque}" Margin="0,0,0,10"/>

                            <Label Content="Lực siết Max (Nm):"/>
                            <TextBox Text="{Binding MaxTorque}" Margin="0,0,0,10"/>

                            <Label Content="Lực đạt (Nm):"/>
                            <TextBox Text="{Binding TargetTorque}" Margin="0,0,0,10"/>

                            <Separator Margin="0,10"/>

                            <Label Content="Tổng số lần xiết:"/>
                            <TextBox Text="{Binding TotalCount}" Margin="0,0,0,10"/>

                            <Label Content="Số lần OK:"/>
                            <TextBox Text="{Binding OKCount}" Margin="0,0,0,10"/>

                            <Label Content="Số lần NG:"/>
                            <TextBox Text="{Binding NGCount}" Margin="0,0,0,10"/>
                        </StackPanel>
                    </GroupBox>
                </Grid>
            </TabItem>

            <!-- Tab 2: Cấu hình Modbus -->
            <TabItem Header="🔧 Cấu hình Kết nối" Style="{StaticResource TabItemStyle}">
                <GroupBox Header="Cài đặt Kết nối Modbus" Style="{StaticResource GroupBoxStyle}" Margin="10">
                    <StackPanel>
                        <Label Content="Loại kết nối:"/>
                        <ComboBox SelectedValue="{Binding ModbusSettings.ConnectionType}" SelectedValuePath="Content" Margin="0,0,0,15">
                            <ComboBoxItem Content="TCP_Individual"/>
                            <ComboBoxItem Content="TCP_Gateway"/>
                            <ComboBoxItem Content="RTU_Serial"/>
                        </ComboBox>

                        <Label Content="Gateway IP (cho TCP_Gateway):"/>
                        <TextBox Text="{Binding ModbusSettings.GatewayIP}" Margin="0,0,0,10"/>

                        <Label Content="Gateway Port (cho TCP_Gateway):"/>
                        <TextBox Text="{Binding ModbusSettings.GatewayPort}" Margin="0,0,0,10"/>

                        <Label Content="Serial Port (cho RTU_Serial):"/>
                        <TextBox Text="{Binding ModbusSettings.SerialPort}" Margin="0,0,0,10"/>

                        <Label Content="Baud Rate (cho RTU_Serial):"/>
                        <TextBox Text="{Binding ModbusSettings.BaudRate}" Margin="0,0,0,15"/>

                        <Label Content="Timeout kết nối (ms):"/>
                        <TextBox Text="{Binding ModbusSettings.Timeout}" Margin="0,0,0,10"/>

                        <Label Content="Số lần thử lại khi lỗi:"/>
                        <TextBox Text="{Binding ModbusSettings.RetryCount}" Margin="0,0,0,10"/>

                        <Label Content="Tần suất quét tín hiệu (ms):"/>
                        <TextBox Text="{Binding ModbusSettings.ScanInterval}" Margin="0,0,0,10"/>
                    </StackPanel>
                </GroupBox>
            </TabItem>

            <!-- Tab 3: Giao diện -->
            <TabItem Header="🎨 Giao diện" Style="{StaticResource TabItemStyle}">
                <Grid Margin="10">
                    <GroupBox Header="Cài đặt Giao diện" Style="{StaticResource GroupBoxStyle}">
                        <StackPanel>
                            <Label Content="Theme:"/>
                            <ComboBox SelectedValue="{Binding UISettings.Theme}" SelectedValuePath="Content" Margin="0,0,0,15">
                                <ComboBoxItem Content="Light"/>
                                <ComboBoxItem Content="Dark"/>
                            </ComboBox>

                            <Label Content="Ngôn ngữ:"/>
                            <ComboBox SelectedValue="{Binding UISettings.Language}" SelectedValuePath="Content" Margin="0,0,0,15">
                                <ComboBoxItem Content="Vietnamese"/>
                                <ComboBoxItem Content="English"/>
                            </ComboBox>

                            <Label Content="Tần suất làm mới UI (ms):"/>
                            <TextBox Text="{Binding UISettings.RefreshInterval}" Margin="0,0,0,15"/>

                            <Label Content="Số cột hiển thị:"/>
                            <TextBox Text="{Binding UISettings.GridColumns}" Margin="0,0,0,10"/>

                            <Label Content="Số hàng hiển thị (0 = tự động):"/>
                            <TextBox Text="{Binding UISettings.GridRows}" Margin="0,0,0,15"/>
                        </StackPanel>
                    </GroupBox>
                </Grid>
            </TabItem>
        </TabControl>

        <!-- Buttons -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="💾 Lưu" Command="{Binding SaveCommand}" Style="{StaticResource SettingsButtonStyle}"/>
            <Button Content="🔄 Tải lại" Command="{Binding ReloadCommand}" Style="{StaticResource SettingsButtonStyle}"/>
            <Button Content="❌ Hủy" Command="{Binding CancelCommand}" Style="{StaticResource SettingsButtonStyle}"/>
        </StackPanel>
    </Grid>
</Window>