<Window x:Class="HMI_ScrewingMonitor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:HMI_ScrewingMonitor.ViewModels"
        xmlns:controls="clr-namespace:HMI_ScrewingMonitor.Controls"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance Type=vm:MainViewModel, IsDesignTimeCreatable=True}"
        Icon="/Resources/app_icon.ico"
        Title="HMI - Giám sát thiết bị vặn vít tự động"
        Height="800" Width="1200"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/ColorTheme.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <!-- Converters -->
            <controls:TorqueHistoryConverter x:Key="TorqueHistoryConverter"/>
            <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>

            <!-- Updated Styles with new color scheme -->
            <Style x:Key="HeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="{StaticResource WhiteTextColor}"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style x:Key="StatusTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Foreground" Value="{StaticResource WhiteTextColor}"/>
        </Style>

        <Style x:Key="ValueTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Foreground" Value="{StaticResource PrimaryTextColor}"/>
        </Style>

        <Style x:Key="ControlButtonStyle" TargetType="Button">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Background" Value="{StaticResource ButtonPrimaryColor}"/>
            <Setter Property="Foreground" Value="{StaticResource WhiteTextColor}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource ButtonHoverColor}"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="{StaticResource ButtonDisabledColor}"/>
                    <Setter Property="Foreground" Value="{StaticResource SecondaryTextColor}"/>
                    <Setter Property="Cursor" Value="Arrow"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        </ResourceDictionary>
    </Window.Resources>

    <Grid Background="{StaticResource LightBackground}">
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="35"/>
        </Grid.RowDefinitions>

        <!-- Control Panel -->
        <Border Grid.Row="0" Background="{StaticResource PrimaryBackground}" Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Left">
                    <Button Content="🔗 Kết nối" Command="{Binding ConnectCommand}"
                           IsEnabled="{Binding CanConnect}"
                           Style="{StaticResource ControlButtonStyle}"/>
                    <Button Content="❌ Ngắt kết nối" Command="{Binding DisconnectCommand}"
                           IsEnabled="{Binding CanDisconnect}"
                           Style="{StaticResource ControlButtonStyle}"/>
                    <Button Content="▶️ Bắt đầu giám sát" Command="{Binding StartMonitoringCommand}"
                           IsEnabled="{Binding CanStartMonitoring}"
                           Style="{StaticResource ControlButtonStyle}"/>
                    <Button Content="⏹️ Dừng giám sát" Command="{Binding StopMonitoringCommand}"
                           IsEnabled="{Binding CanStopMonitoring}"
                           Style="{StaticResource ControlButtonStyle}"/>
                    <Button Content="⚙️ Cấu hình" Command="{Binding OpenSettingsCommand}"
                           Style="{StaticResource ControlButtonStyle}"/>
                    <Button Content="ℹ️ Giới thiệu" Command="{Binding OpenAboutCommand}"
                           Style="{StaticResource ControlButtonStyle}"/>
                </StackPanel>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <Border Background="{StaticResource SecondaryBackground}" CornerRadius="5" Padding="15,8" Margin="5,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Trạng thái:" Foreground="{StaticResource WhiteTextColor}" FontWeight="Bold"/>
                            <TextBlock Text="{Binding ConnectionStatus}" Margin="10,0"
                                     Foreground="{StaticResource WarningColor}" FontWeight="Bold"/>
                        </StackPanel>
                    </Border>
                    
                    <Border Background="{StaticResource SecondaryBackground}" CornerRadius="5" Padding="15,8" Margin="5,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Giám sát:" Foreground="{StaticResource WhiteTextColor}" FontWeight="Bold"/>
                            <TextBlock Margin="10,0" FontWeight="Bold">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsMonitoring}" Value="True">
                                                <Setter Property="Text" Value="BẬT"/>
                                                <Setter Property="Foreground" Value="{StaticResource SuccessColor}"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding IsMonitoring}" Value="False">
                                                <Setter Property="Text" Value="TẮT"/>
                                                <Setter Property="Foreground" Value="{StaticResource WarningColor}"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Device Grid -->
        <ScrollViewer Grid.Row="1" Margin="10">
            <ItemsControl ItemsSource="{Binding Devices}" FontSize="20">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Columns="{Binding GridColumns}" Rows="{Binding GridRows}"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border BorderThickness="3" Margin="5"
                               Background="{StaticResource CardBackground}" CornerRadius="8"
                               BorderBrush="{Binding DeviceBorderColor}">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Enabled}" Value="False">
                                            <Setter Property="Opacity" Value="0.6"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding Enabled}" Value="True">
                                            <Setter Property="Opacity" Value="1.0"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            <Border.Effect>
                                <DropShadowEffect ShadowDepth="3" Color="Gray" Opacity="0.3"/>
                            </Border.Effect>

                            <Grid Margin="10">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="40"/>
                                    <RowDefinition Height="60"/>
                                    <RowDefinition Height="80"/>
                                    <RowDefinition Height="40"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="30"/>
                                </Grid.RowDefinitions>

                                <!-- Device Header -->
                                <Border Grid.Row="0" Background="{StaticResource PrimaryBackground}" CornerRadius="5">
                                    <Grid Margin="10,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Grid.Column="0" Text="{Binding DeviceName}"
                                                 Style="{StaticResource HeaderStyle}"
                                                 HorizontalAlignment="Left" VerticalAlignment="Center"/>

                                        <Ellipse Grid.Column="1" Width="15" Height="15" Margin="5,0">
                                            <Ellipse.Style>
                                                <Style TargetType="Ellipse">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsConnected}" Value="True">
                                                            <Setter Property="Fill" Value="{StaticResource SuccessColor}"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding IsConnected}" Value="False">
                                                            <Setter Property="Fill" Value="{StaticResource ErrorColor}"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Ellipse.Style>
                                        </Ellipse>

                                        <Border Grid.Column="2" Background="White" CornerRadius="3"
                                               Padding="8,2" Margin="5,0">
                                            <TextBlock Text="{Binding DeviceStatusText}"
                                                     FontSize="10" FontWeight="Bold"
                                                     Foreground="Black"/>
                                        </Border>

                                        <Border Grid.Column="3" Background="White" CornerRadius="3"
                                               Padding="8,2" Margin="5,0">
                                            <TextBlock Text="{Binding DeviceModel}"
                                                     FontSize="10" FontWeight="Bold"
                                                     Foreground="Black"/>
                                        </Border>
                                    </Grid>
                                </Border>

                                <!-- Status Section -->
                                <Border Grid.Row="1" Margin="0,5" CornerRadius="5"
                                       Background="{Binding ResultBackgroundColor}">
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                                        <TextBlock FontSize="24" Margin="0,0,10,0">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding ResultText}" Value="OK">
                                                            <Setter Property="Text" Value="✓"/>
                                                            <Setter Property="Foreground" Value="{StaticResource WhiteTextColor}"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding ResultText}" Value="NG">
                                                            <Setter Property="Text" Value="✗"/>
                                                            <Setter Property="Foreground" Value="{StaticResource WhiteTextColor}"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding ResultText}" Value="--">
                                                            <Setter Property="Text" Value="⚠"/>
                                                            <Setter Property="Foreground" Value="{StaticResource SecondaryTextColor}"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                        <TextBlock Text="{Binding ResultText}"
                                                 Style="{StaticResource StatusTextStyle}"/>
                                    </StackPanel>
                                </Border>

                                <!-- Measurement Grid -->
                                <Border Grid.Row="2" BorderBrush="Black" BorderThickness="2"
                                       Background="White" Margin="0,5">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="25"/>
                                            <RowDefinition Height="*"/>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Headers -->
                                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Tiêu chuẩn Nm"
                                                 FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"
                                                 FontSize="12"/>
                                        <TextBlock Grid.Row="0" Grid.Column="1" Text="Lực đặt Nm"
                                                 FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"
                                                 FontSize="12"/>
                                        <TextBlock Grid.Row="0" Grid.Column="2" Text="Thực tế Nm"
                                                 FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"
                                                 FontSize="12"/>

                                        <!-- Values -->
                                        <Border Grid.Row="1" Grid.Column="0" BorderBrush="Black" BorderThickness="1"
                                               Margin="2">
                                            <TextBlock Text="{Binding StandardRange}"
                                                     HorizontalAlignment="Center" VerticalAlignment="Center"
                                                     FontSize="14" FontWeight="Bold"/>
                                        </Border>

                                        <Border Grid.Row="1" Grid.Column="1" BorderBrush="Black" BorderThickness="1"
                                               Margin="2">
                                            <TextBlock Text="{Binding TargetTorque, StringFormat='{}{0:F2}'}"
                                                     HorizontalAlignment="Center" VerticalAlignment="Center"
                                                     FontSize="14" FontWeight="Bold"/>
                                        </Border>

                                        <Border Grid.Row="1" Grid.Column="2" BorderBrush="Black" BorderThickness="1"
                                               Margin="2">
                                            <TextBlock Text="{Binding ActualTorque, StringFormat='{}{0:F2}'}"
                                                     HorizontalAlignment="Center" VerticalAlignment="Center"
                                                     FontSize="14" FontWeight="Bold"/>
                                        </Border>
                                    </Grid>
                                </Border>

                                <!-- Statistics Row -->
                                <Border Grid.Row="3" Background="White" BorderBrush="Black" BorderThickness="2"
                                       Margin="0,5">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Grid.Column="0" Text="{Binding TotalCount, StringFormat='Tổng: {0}'}"
                                                 HorizontalAlignment="Center" VerticalAlignment="Center"
                                                 FontSize="12" FontWeight="Bold"/>

                                        <TextBlock Grid.Column="1" Text="{Binding OKDeviceCount, StringFormat='OK: {0}'}"
                                                 HorizontalAlignment="Center" VerticalAlignment="Center"
                                                 FontSize="12" FontWeight="Bold" Foreground="Blue"/>

                                        <TextBlock Grid.Column="2" Text="{Binding NGDeviceCount, StringFormat='NG: {0}'}"
                                                 HorizontalAlignment="Center" VerticalAlignment="Center"
                                                 FontSize="12" FontWeight="Bold" Foreground="Red"/>
                                    </Grid>
                                </Border>

                                <!-- Chart Section -->
                                <Border Grid.Row="4" Background="White" BorderBrush="Black" BorderThickness="2"
                                       Margin="0,5">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="20"/>
                                            <RowDefinition Height="120"/>
                                            <RowDefinition Height="20"/>
                                        </Grid.RowDefinitions>

                                        <!-- Max label -->
                                        <TextBlock Grid.Row="0" Text="{Binding MaxTorque, StringFormat='Max({0:F2} Nm)'}"
                                                 HorizontalAlignment="Right" VerticalAlignment="Center"
                                                 FontSize="10" Margin="0,0,10,0"/>

                                        <!-- Real-time Torque Chart -->
                                        <controls:TorqueChart Grid.Row="1" Background="White" Margin="10"
                                                            TorqueHistory="{Binding TorqueHistory}"
                                                            MinTorque="{Binding MinTorque}"
                                                            MaxTorque="{Binding MaxTorque}"/>

                                        <!-- Min label -->
                                        <TextBlock Grid.Row="2" Text="{Binding MinTorque, StringFormat='Min({0:F2} Nm)'}"
                                                 HorizontalAlignment="Right" VerticalAlignment="Center"
                                                 FontSize="10" Margin="0,0,10,0"/>
                                    </Grid>
                                </Border>

                                <!-- Footer with Date -->
                                <Border Grid.Row="5" Margin="0,5,0,0">
                                    <TextBlock Text="{Binding LastUpdate, StringFormat='dd.MM.yyyy'}"
                                             FontSize="14" FontWeight="Bold"
                                             HorizontalAlignment="Right" VerticalAlignment="Center"/>
                                </Border>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- Status Bar -->
        <StatusBar Grid.Row="2" Background="{StaticResource SecondaryBackground}">
            <StatusBarItem>
                <TextBlock Text="{Binding TotalDevices, StringFormat='Tổng thiết bị: {0}'}"
                          FontWeight="Bold" Foreground="{StaticResource WhiteTextColor}"/>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem>
                <TextBlock Text="{Binding ConnectedDevicesCount, StringFormat='Kết nối: {0}'}"
                          FontWeight="Bold" Foreground="{StaticResource SuccessColor}"/>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem>
                <TextBlock Text="{Binding OKCount, StringFormat='OK: {0}'}"
                          FontWeight="Bold" Foreground="{StaticResource InfoColor}"/>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem>
                <TextBlock Text="{Binding NGCount, StringFormat='NG: {0}'}"
                          FontWeight="Bold" Foreground="{StaticResource ErrorColor}"/>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Margin="10,0,5,0" FontWeight="Bold" Foreground="{StaticResource WhiteTextColor}">
                        <Run Text="Tổng hôm nay:"/>
                    </TextBlock>
                    <TextBlock Foreground="{StaticResource SuccessColor}" FontWeight="Bold">
                        <Run Text="{Binding DailyOKCount}"/>
                        <Run Text=" OK"/>
                    </TextBlock>
                    <TextBlock Text="/" Margin="5,0" FontWeight="Bold" Foreground="{StaticResource WhiteTextColor}"/>
                    <TextBlock Foreground="{StaticResource ErrorColor}" FontWeight="Bold">
                        <Run Text="{Binding DailyNGCount}"/>
                        <Run Text=" NG"/>
                    </TextBlock>
                </StackPanel>
            </StatusBarItem>
            <!-- Trial Countdown (only shown when not licensed) -->
            <Separator Visibility="{Binding ShowTrialCountdown, Converter={StaticResource BoolToVisibilityConverter}}"/>
            <StatusBarItem Visibility="{Binding ShowTrialCountdown, Converter={StaticResource BoolToVisibilityConverter}}">
                <Border Background="#FFF3E0" CornerRadius="3" Padding="8,2">
                    <TextBlock Text="{Binding TrialTimeDisplay}"
                              FontWeight="Bold"
                              FontSize="12"
                              Foreground="{Binding TrialCountdownColor}"/>
                </Border>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem HorizontalAlignment="Right">
                <TextBlock Text="{Binding Source={x:Static sys:DateTime.Now},
                          StringFormat='Thời gian: {0:HH:mm:ss}'}"
                          FontWeight="Bold" Foreground="{StaticResource WhiteTextColor}"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
