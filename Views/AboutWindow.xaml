<Window x:Class="HMI_ScrewingMonitor.Views.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Thông tin phần mềm"
        Height="550" Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#F5F5F5">

    <Window.Resources>
        <Style x:Key="SectionHeader" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
            <Setter Property="Margin" Value="0,10,0,5"/>
        </Style>

        <Style x:Key="InfoLabel" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#7F8C8D"/>
            <Setter Property="Margin" Value="0,5,0,2"/>
        </Style>

        <Style x:Key="InfoValue" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>

        <Style x:Key="ActionButton" TargetType="Button">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="20,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Background" Value="#3498DB"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2980B9"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2C3E50" Padding="20">
            <StackPanel HorizontalAlignment="Center">
                <TextBlock Text="🔧 HMI Screwing Monitor"
                          FontSize="24" FontWeight="Bold"
                          Foreground="White"
                          HorizontalAlignment="Center"/>
                <TextBlock Text="Hệ thống giám sát thiết bị vặn vít tự động"
                          FontSize="12"
                          Foreground="#ECF0F1"
                          HorizontalAlignment="Center"
                          Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="25,15">
                <!-- Application Info -->
                <TextBlock Text="📋 Thông tin phần mềm" Style="{StaticResource SectionHeader}"/>
                <Border Background="White" CornerRadius="5" Padding="15" Margin="0,5,0,10">
                    <Border.Effect>
                        <DropShadowEffect ShadowDepth="2" Color="Gray" Opacity="0.2"/>
                    </Border.Effect>
                    <StackPanel>
                        <TextBlock Text="Phiên bản:" Style="{StaticResource InfoLabel}"/>
                        <TextBlock x:Name="VersionText" Text="Version 1.0.0" Style="{StaticResource InfoValue}"/>

                        <TextBlock Text="Ngày phát hành:" Style="{StaticResource InfoLabel}"/>
                        <TextBlock x:Name="ReleaseDateText" Text="11/10/2025" Style="{StaticResource InfoValue}"/>

                        <TextBlock Text="Mô tả:" Style="{StaticResource InfoLabel}"/>
                        <TextBlock Text="Phần mềm giám sát thiết bị vặn vít công nghiệp qua giao thức Modbus TCP/RTU"
                                  Style="{StaticResource InfoValue}" TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>

                <!-- License Info -->
                <TextBlock Text="🔐 Thông tin bản quyền" Style="{StaticResource SectionHeader}"/>
                <Border Background="White" CornerRadius="5" Padding="15" Margin="0,5,0,10">
                    <Border.Effect>
                        <DropShadowEffect ShadowDepth="2" Color="Gray" Opacity="0.2"/>
                    </Border.Effect>
                    <StackPanel>
                        <TextBlock Text="Trạng thái:" Style="{StaticResource InfoLabel}"/>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <Ellipse x:Name="LicenseStatusIndicator" Width="12" Height="12"
                                    Fill="#27AE60" VerticalAlignment="Center" Margin="0,0,8,0"/>
                            <TextBlock x:Name="LicenseStatusText" Text="Đã kích hoạt"
                                      FontSize="12" FontWeight="Bold" Foreground="#27AE60"/>
                        </StackPanel>

                        <TextBlock x:Name="ExpiryLabel" Text="Hết hạn:" Style="{StaticResource InfoLabel}" Visibility="Collapsed"/>
                        <TextBlock x:Name="ExpiryDateText" Text="Vĩnh viễn" Style="{StaticResource InfoValue}" Visibility="Collapsed"/>

                        <TextBlock x:Name="TrialLabel" Text="Dùng thử còn lại:" Style="{StaticResource InfoLabel}" Visibility="Collapsed"/>
                        <TextBlock x:Name="TrialDaysText" Text="30 ngày" Style="{StaticResource InfoValue}"
                                  FontWeight="Bold" Foreground="#E67E22" Visibility="Collapsed"/>

                        <TextBlock Text="Hardware ID:" Style="{StaticResource InfoLabel}"/>
                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox x:Name="HardwareIdText" Grid.Column="0"
                                    Text="A1B2-C3D4-E5F6-G7H8"
                                    IsReadOnly="True"
                                    BorderThickness="1"
                                    BorderBrush="#BDC3C7"
                                    Padding="5"
                                    FontFamily="Consolas"
                                    FontSize="11"/>
                            <Button Grid.Column="1" Content="📋"
                                   Width="30" Height="26" Margin="5,0,0,0"
                                   Click="CopyHardwareId_Click"
                                   ToolTip="Copy Hardware ID"
                                   Background="#3498DB" Foreground="White"
                                   BorderThickness="0" Cursor="Hand"/>
                        </Grid>

                        <Button Content="🔑 Kích hoạt License"
                               Click="OpenLicenseWindow_Click"
                               Background="#27AE60" Foreground="White"
                               Padding="10,6" FontWeight="Bold"
                               BorderThickness="0" Cursor="Hand"
                               HorizontalAlignment="Left"/>
                    </StackPanel>
                </Border>

                <!-- Developer Info -->
                <TextBlock Text="👨‍💻 Thông tin nhà phát triển" Style="{StaticResource SectionHeader}"/>
                <Border Background="White" CornerRadius="5" Padding="15" Margin="0,5,0,10">
                    <Border.Effect>
                        <DropShadowEffect ShadowDepth="2" Color="Gray" Opacity="0.2"/>
                    </Border.Effect>
                    <StackPanel>
                        <TextBlock Text="Công ty:" Style="{StaticResource InfoLabel}"/>
                        <TextBlock Text="Your Company Name" Style="{StaticResource InfoValue}"/>

                        <TextBlock Text="Hỗ trợ kỹ thuật:" Style="{StaticResource InfoLabel}"/>
                        <TextBlock Text="support@example.com" Style="{StaticResource InfoValue}"/>

                        <TextBlock Text="Website:" Style="{StaticResource InfoLabel}"/>
                        <TextBlock Text="https://example.com" Style="{StaticResource InfoValue}"/>
                    </StackPanel>
                </Border>

                <!-- Technical Info -->
                <TextBlock Text="⚙️ Thông tin kỹ thuật" Style="{StaticResource SectionHeader}"/>
                <Border Background="White" CornerRadius="5" Padding="15" Margin="0,5,0,0">
                    <Border.Effect>
                        <DropShadowEffect ShadowDepth="2" Color="Gray" Opacity="0.2"/>
                    </Border.Effect>
                    <StackPanel>
                        <TextBlock Text="Framework:" Style="{StaticResource InfoLabel}"/>
                        <TextBlock Text=".NET 6.0 Windows (WPF)" Style="{StaticResource InfoValue}"/>

                        <TextBlock Text="Giao thức:" Style="{StaticResource InfoLabel}"/>
                        <TextBlock Text="Modbus TCP/IP, Modbus RTU" Style="{StaticResource InfoValue}"/>

                        <TextBlock Text="Thiết bị hỗ trợ:" Style="{StaticResource InfoLabel}"/>
                        <TextBlock Text="Handy2000 Screwing Devices" Style="{StaticResource InfoValue}"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Footer -->
        <Border Grid.Row="2" Background="White" BorderBrush="#BDC3C7" BorderThickness="0,1,0,0" Padding="15">
            <StackPanel>
                <TextBlock Text="© 2025 HMI Screwing Monitor. All rights reserved."
                          FontSize="10" Foreground="#7F8C8D"
                          HorizontalAlignment="Center"/>
                <Button Content="Đóng"
                       Click="Close_Click"
                       Style="{StaticResource ActionButton}"
                       HorizontalAlignment="Center"
                       Margin="0,10,0,0"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
